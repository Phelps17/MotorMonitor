<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|center_vertical">

<TextView
    android:id="@+id/moduleName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/electricCurrentTextView"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="18dp"
    android:layout_marginLeft="15dp"
    android:layout_weight="1"
    android:text="Electric Current Analytics"
    android:textSize="30sp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/electricCurrentTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/electricCurrentChangesTextView"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="15dp"
    android:layout_weight="1"
    android:text="468.5A"
    android:textSize="22sp"/>

<TextView
    android:id="@+id/electricCurrentChangesTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/graph"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_weight="1"
    android:text="-23.4A (6.0%)"
    android:textColor="@android:color/holo_green_dark"
    android:textSize="20sp"/>

<com.jjoe64.graphview.GraphView
    android:id="@+id/graph"
    android:layout_width="match_parent"
    android:layout_height="300dip"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"/>

</RelativeLayout>
